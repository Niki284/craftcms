<div class="card">
<div class="card__foto">
<img src="{{ product.image.one().url }}" alt="{{ product.title }}" />
</div>
	<div class="card__text">
			<h2>{{ product.title }}</h2>
			<p>{{ product.description|striptags|slice(0, 200) }}</p>
			<p>{{ product.price }}</p>
			<p>{{ product.category.one().title }}</p>
			<a href="{{ product.url }}" class="btn btn-primary">View Product</a>
	</div>
</div>
